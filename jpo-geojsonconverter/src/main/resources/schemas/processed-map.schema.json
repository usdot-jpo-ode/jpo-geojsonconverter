{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/usdot-jpo-ode/jpo-geojsonconverter/develop/jpo-geojsonconverter/src/main/resources/schemas/processed-map.schema.json",
    "type": "object",
    "description": "MAP object containing both FeatureCollections for lane data and another for connecting lane geometry for a single intersection and shared properties",
    "properties": {
        "mapFeatureCollection": {
            "$ref": "#/$defs/MapFeatureCollection"
        },
        "connectingLanesFeatureCollection": {
            "$ref": "#/$defs/ConnectingLanesFeatureCollection"
        },
        "properties": {
            "$ref": "#/$defs/MapProperties"
        }
    },
    "required": [
        "mapFeatureCollection",
        "connectingLanesFeatureCollection"
    ],
    "additionalProperties": false,
    "$defs": {
        "MapFeatureCollection": {
            "type": "object",
            "description": "Feature collection for a MAP for one intersection",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "FeatureCollection"
                },
                "features": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/MapFeature"
                    }
                }
            },
            "required": [
                "type",
                "features"
            ],
            "additionalProperties": false
        },
        "MapFeature": {
            "type": "object",
            "description": "Feature for one lane of an intersection",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "Feature"
                },
                "id": {
                    "type": "number"
                },
                "properties": {
                    "$ref": "#/$defs/MapFeatureProperties",
                    "description": "Intersection and Lane properties"
                },
                "geometry": {
                    "$ref": "#/$defs/LineStringGeometry"
                }
            },
            "required": [
                "type",
                "id",
                "properties",
                "geometry"
            ],
            "additionalProperties": false
        },
        "LineStringGeometry": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "LineString"
                },
                "coordinates": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Coordinate"
                    },
                    "minItems": 2
                }
            },
            "required": [
                "type",
                "coordinates"
            ],
            "additionalProperties": false
        },
        "Coordinate": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 2,
            "maxItems": 3,
            "description": "Lon/Lat coordinate with optional elevation"
        },
        "MapFeatureProperties": {
            "type": "object",
            "properties": {
                "nodes": {
                    "type": "array"
                },
                "laneId": {
                    "$ref": "map.schema.json#/$defs/J2735LaneID"
                },
                "laneName": {
                    "$ref": "map.schema.json#/$defs/J2735DescriptiveName"
                },
                "sharedWith": {
                    "$ref": "map.schema.json#/$defs/J2735LaneSharing"
                },
                "egressApproach": {
                    "$ref": "map.schema.json#/$defs/J2735ApproachID"
                },
                "ingressApproach": {
                    "$ref": "map.schema.json#/$defs/J2735ApproachID"
                },
                "ingressPath": {
                    "type": "boolean",
                    "description": "From directionalUse=DE_LaneDirection"
                },
                "egressPath": {
                    "type": "boolean",
                    "description": "From directionalUse=DE_LaneDirection"
                },
                "maneuvers": {
                    "$ref": "map.schema.json#/$defs/J2735AllowedManeuvers"
                },
                "connectsTo": {
                    "$ref": "#/$defs/ConnectsToList"
                }
            },
            "required": [
                "nodes",
                "laneId",
                "sharedWith",
                "maneuvers",
                "egressPath",
                "ingressPath",
                "connectsTo"
            ],
            "additionalProperties": false
        },
        "MapProperties": {
            "type": "object",
            "properties": {
                "messageType": {
                    "type": "string",
                    "const": "MAP"
                },
                "odeReceivedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "originIp": {
                    "$ref": "#/$defs/IPAddress"
                },
                "intersectionName": {
                    "$ref": "map.schema.json#/$defs/J2735DescriptiveName"
                },
                "region": {
                    "$ref": "map.schema.json#/$defs/J2735RoadRegulatorID"
                },
                "intersectionId": {
                    "$ref": "map.schema.json#/$defs/J2735IntersectionID"
                },
                "msgIssueRevision": {
                    "$ref": "map.schema.json#/$defs/J2735MsgCount",
                    "description": "DE_MsgCount for MAP"
                },
                "revision": {
                    "$ref": "map.schema.json#/$defs/J2735MsgCount",
                    "description": "DE_MsgCount for intersection"
                },
                "refPoint": {
                    "$ref": "map.schema.json#/$defs/OdePosition3D"
                },
                "cti4501Conformant": {
                    "type": "boolean"
                },
                "validationMessages": {
                    "$ref": "#/$defs/ValidationMessageList"
                },
                "laneWidth": {
                    "type": "number"
                },
                "speedLimits": {
                    "$ref": "map.schema.json#/$defs/J2735SpeedLimitList",
                    "description": "DF_SpeedLimitList.  Mandatory in CI Implementation Guide.  Optional in J2735."
                },
                "mapSource": {
                    "type": "string"
                },
                "timeStamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Derived from the MapData timestamp=DE_MinuteOfTheYear field if available, othewise from OdeReceivedAt."
                }
            },
            "required": [
                "messageType",
                "odeReceivedAt",
                "timeStamp",
                "originIp",
                "intersectionId",
                "revision",
                "refPoint",
                "cti4501Conformant",
                "laneWidth",
                "speedLimits"
            ],
            "additionalProperties": false
        },
        "ConnectsToList": {
            "items": {
                "$ref": "#/$defs/Connection"
            },
            "type": "array",
            "minItems": 1,
            "maxItems": 16
        },
        "Connection": {
            "properties": {
                "connectingLane": {
                    "$ref": "map.schema.json#/$defs/J2735ConnectingLane"
                },
                "connectionID": {
                    "oneOf": [
                        {
                            "$ref": "map.schema.json#/$defs/J2735LaneConnectionID"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "DE_LaneConnectionID.  Optional, may be null"
                },
                "remoteIntersection": {
                    "oneOf": [
                        {
                            "$ref": "map.schema.json#/$defs/J2735IntersectionReferenceID"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "DE_IntersectionReferenceID.  Optional, may be null"
                },
                "signalGroup": {
                    "$ref": "map.schema.json#/$defs/J2735SignalGroupID",
                    "description": "DE_SignalGroupID.  Mandatory in CI Implementation Guide.  Optional in J2735"
                },
                "userClass": {
                    "oneOf": [
                        {
                            "$ref": "map.schema.json#/$defs/J2735RestrictionClassID"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "DE_RestrictionClassID.  Optional, may be null"
                }
            },
            "required": [
                "connectingLane",
                "signalGroup"
            ],
            "type": "object",
            "additionalProperties": false
        },
        "ConnectingLanesFeatureCollection": {
            "type": "object",
            "description": "Feature collection for a MAP's connecting lane geometry to define routes of travel through an intersection relative to a signal group",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "FeatureCollection"
                },
                "features": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/ConnectingLanesFeature"
                    }
                }
            },
            "required": [
                "type",
                "features"
            ],
            "additionalProperties": false
        },
        "ConnectingLanesFeature": {
            "type": "object",
            "description": "Feature for one connecting ingress lane to one egress lane for an intersection",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "Feature"
                },
                "id": {
                    "type": "string"
                },
                "properties": {
                    "$ref": "#/$defs/ConnectingLanesProperties",
                    "description": "Intersection connecting lanes properties"
                },
                "geometry": {
                    "$ref": "#/$defs/LineStringGeometry"
                }
            },
            "required": [
                "type",
                "id",
                "properties",
                "geometry"
            ],
            "additionalProperties": false
        },
        "ConnectingLanesProperties": {
            "type": "object",
            "properties": {
                "signalGroupId": {
                    "$ref": "map.schema.json#/$defs/J2735SignalGroupID"
                },
                "ingressLaneId": {
                    "$ref": "map.schema.json#/$defs/J2735LaneID"
                },
                "egressLaneId": {
                    "$ref": "map.schema.json#/$defs/J2735LaneID"
                }
            },
            "required": [
                "signalGroupId",
                "ingressLaneId",
                "egressLaneId"
            ],
            "additionalProperties": false
        },
        "ValidationMessageList": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ValidationMessage"
            },
            "minItems": 0,
            "description": "A list of validation messages"
        },
        "ValidationMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Description/summary of the validation error"
                },
                "jsonPath": {
                    "type": "string",
                    "description": "Path in the original ODE JSON message"
                },
                "schemaPath": {
                    "type": "string",
                    "description": "Path in the json schema of the ODE JSON"
                },
                "exception": {
                    "type": "string",
                    "description": "Details of java validation exception thrown, if any"
                }
            },
            "required": [
                "message"
            ]
        },
        "IPAddress": {
            "oneOf": [
                { 
                    "type": "string",
                    "format": "ipv4"
                },
                { 
                    "type": "string",
                    "format": "ipv6"
                }
            ]
        },
        "J2735SignalGroupID": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255,
            "description": "DE_SignalGroupID"
        }
    }
}