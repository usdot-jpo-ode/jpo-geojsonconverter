{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "processed-bsm-schema-v1",
    "type": "object",
    "description": "BSM object containing a FeatureCollection for the geospatial data of a BSM and additional metadata",
    "properties": {
        "type": {
            "type": "string",
            "const": "Feature"
        },
        "id": {
            "type": "number"
        },
        "geometry": {
            "$ref": "#/$defs/PointGeometry"
        },
        "properties": {
            "$ref": "#/$defs/BsmProperties"
        }
    },
    "additionalProperties": false,
    "required": [
        "type",
        "geometry",
        "properties"
    ],
    "$defs": {
        "PointGeometry": {
            "type": [
                "object",
                "string"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "Point"
                },
                "coordinates": {
                    "$ref": "#/$defs/Coordinate"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "coordinates"
            ]
        },
        "Coordinate": {
            "type": "array",
            "description": "Lon/Lat coordinate with optional elevation",
            "maxItems": 3,
            "minItems": 2,
            "items": {
                "type": "number"
            }
        },
        "BsmProperties": {
            "type": "object",
            "properties": {
                "schemaVersion": {
                    "type": "integer",
                    "minimum": -1
                },
                "messageType": {
                    "type": "string",
                    "const": "BSM"
                },
                "odeReceivedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "timeStamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "originIp": {
                    "$ref": "#/$defs/IPAddress"
                },
                "logName": {
                    "type": "string"
                },
                "validationMessages": {
                    "$ref": "#/$defs/ValidationMessageList"
                },
                "accelSet": {
                    "$ref": "#/$defs/J2735AccelerationSet"
                },
                "accuracy": {
                    "$ref": "#/$defs/J2735PositionalAccuracy"
                },
                "angle": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "brakes": {
                    "$ref": "#/$defs/J2735BrakeSystemStatus"
                },
                "heading": {
                    "type": "number"
                },
                "id": {
                    "type": "string"
                },
                "msgCnt": {
                    "type": "integer"
                },
                "secMark": {
                    "type": "integer"
                },
                "size": {
                    "$ref": "#/$defs/J2735VehicleSize"
                },
                "speed": {
                    "type": "number"
                },
                "transmission": {
                    "type": "string",
                    "enum": [
                        "NEUTRAL",
                        "PARK",
                        "FORWARDGEARS",
                        "REVERSEGEARS",
                        "RESERVED1",
                        "RESERVED2",
                        "RESERVED3",
                        "UNAVAILABLE"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "schemaVersion",
                "messageType",
                "odeReceivedAt",
                "timeStamp",
                "validationMessages"
            ]
        },
        "ValidationMessageList": {
            "type": "array",
            "description": "A list of validation messages",
            "minItems": 0,
            "items": {
                "$ref": "#/$defs/ValidationMessage"
            }
        },
        "ValidationMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Description/summary of the validation error"
                },
                "jsonPath": {
                    "type": "string",
                    "description": "Path in the original ODE JSON message"
                },
                "schemaPath": {
                    "type": "string",
                    "description": "Path in the json schema of the ODE JSON"
                },
                "exception": {
                    "type": "string",
                    "description": "Details of java validation exception thrown, if any"
                }
            },
            "required": [
                "message"
            ]
        },
        "IPAddress": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "ipv4"
                },
                {
                    "type": "string",
                    "format": "ipv6"
                }
            ]
        },
        "J2735AccelerationSet": {
            "type": "object",
            "properties": {
                "accelLat": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "accelLong": {
                    "type": "number"
                },
                "accelVert": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "accelYaw": {
                    "type": "number"
                }
            },
            "required": [
                "accelLong",
                "accelYaw"
            ]
        },
        "J2735PositionalAccuracy": {
            "type": "object",
            "properties": {
                "orientation": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "semiMajor": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "semiMinor": {
                    "type": [
                        "number",
                        "null"
                    ]
                }
            }
        },
        "J2735BrakeSystemStatus": {
            "type": "object",
            "properties": {
                "abs": {
                    "type": "string"
                },
                "auxBrakes": {
                    "type": "string"
                },
                "brakeBoost": {
                    "type": "string"
                },
                "scs": {
                    "type": "string"
                },
                "traction": {
                    "type": "string"
                },
                "wheelBrakes": {
                    "type": "object",
                    "properties": {
                        "leftFront": {
                            "type": "boolean"
                        },
                        "leftRear": {
                            "type": "boolean"
                        },
                        "rightFront": {
                            "type": "boolean"
                        },
                        "rightRear": {
                            "type": "boolean"
                        },
                        "unavailable": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "unavailable",
                        "leftFront",
                        "leftRear",
                        "rightFront",
                        "rightRear"
                    ]
                }
            },
            "required": [
                "wheelBrakes",
                "traction",
                "abs",
                "scs",
                "brakeBoost",
                "auxBrakes"
            ]
        },
        "J2735VehicleSize": {
            "type": "object",
            "properties": {
                "length": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "width": {
                    "type": [
                        "integer",
                        "null"
                    ]
                }
            }
        }
    }
}